<div class="flex justify-center py-1.5 border-t" data-filters-target="pagination" data-page="<%= @page %>" data-per-page="<%= @per_page %>" data-previous-page="<%= @previous_page %>" data-next-page="<%= @next_page %>">
  <% if @page > 1 %>
    <%= link_to 'Previous', activities_path, class: 'bg-white text-gray-700 px-1 py-0.5 rounded border border-gray-300 text-sm', data: { filters_target: "previousPageButton", turbo_stream: "" } %>
  <% else %>
    <span class="cursor-pointer bg-gray-100 text-gray-400 px-1 py-0.5 rounded border border-gray-300 text-sm">Previous</span>
  <% end %>

  <% if @filter_result.next_page? %>
    <%= link_to 'Next', activities_path, class: 'ml-2 bg-white text-gray-700 px-1 py-0.5 rounded border border-gray-300 text-sm hover:bg-gray-100', data: { filters_target: "nextPageButton", turbo_stream: "" } %>
  <% else %>
    <span class="ml-2 cursor-pointer bg-gray-100 text-gray-400 px-1 py-0.5 rounded border border-gray-300 text-sm">Next</span>
  <% end %>

  <%= select_tag 'per_page', options_for_select([10, 30, 50, 100], @per_page), data: { action: "change->filters#selectPerPage" } %>

  <div class="ml-2 text-sm text-gray-700 flex items-center">
    <span><%= @from %> - <%= @to %> of <%= @total_count %></span>
  </div>
</div>